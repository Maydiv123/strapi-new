{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "text"
    },
    "slug": {
      "type": "string"
    },
    "content": {
      "type": "text",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "author": {
      "type": "string"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "web_development",
        "app_development",
        "ai_services",
        "marketing",
        "ui_ux",
        "technology",
        "business"
      ]
    },
    "tags": {
      "type": "json"
    },
    "published_a": {
      "type": "datetime"
    },
    "is_featured": {
      "type": "boolean"
    },
    "reading_time": {
      "type": "integer"
    },
    "seo": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::seo-metadata.seo-metadata"
    },
    "related_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post"
    }
  }
}
